<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <!-- <link rel="stylesheet" href="/css/style.css" /> -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
  </head>
  <script src="/scripts/deleteUrl.js"></script>
  <body>
    <div class="container">
      <h1>URL Shrinker</h1>
      <a href="/user/logout" class="btn btn-primary">Logout</a>
      <form action="/url" method="post" class="my-4 form-inline">
        <label for="originalURL"><h4>URL&nbsp;</h4></label>
        <input
          required
          type="text"
          name="originalURL"
          id="originalURL"
          placeholder="https://www.example.com"
          class="form-control mr-2 col"
        />
        <button class="btn btn-success" type="submit">Generate</button>
      </form>

      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>S.No.</th>
            <th>ORIGINAL URL</th>
            <th>SHORT URL</th>
            <th>CLICKED</th>
          </tr>
        </thead>

        <tbody>
          <% allurls.forEach((eachUrl,index) => { %>
          <tr>
            <th><%= index+1 %></th>
            <th>
              <a href=" <%= eachUrl.originalUrl %> "
                ><%= eachUrl.originalUrl %></a
              >
            </th>
            <th>
              <a href=" <%= eachUrl.shortUrl %> " target="_blank"
                ><p>https://shrink.com/<%= eachUrl.shortUrl %></p></a
              >
            </th>
            <th><%= eachUrl.clicks %></th>
            <th><button
              onclick="deleteUrl('<%= eachUrl._id %>')"
              class="btn btn-danger"
            >
              Delete
            </button></th>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
